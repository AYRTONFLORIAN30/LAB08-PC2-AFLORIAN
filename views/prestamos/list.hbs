<div class="container mt-4">
    <h2>Listado de Préstamos</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID Préstamo</th>
                <th>ID Usuario</th>
                <th>Fecha de Préstamo</th>
                <th>Fecha de Devolución</th>
                <th>Estado</th>
                <th>Multa</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each prestamos}}
            <tr>
                <td>{{id_prestamo}}</td>
                <td>{{id_usuario}}</td>
                <td>{{formatDate fecha_prestamo}}</td> <!-- Utiliza el helper para formatear -->
                <td>{{formatDate fecha_devolucion}}</td> <!-- Utiliza el helper para formatear -->
                <td>{{estado}}</td>
                <td>{{multa}}</td>
                <td>
                    <!-- Formulario para el botón de Actualizar -->
                    <form action="/prestamos/edit/{{_id}}" method="GET" style="display:inline;">
                        <button type="submit" class="btn btn-warning">Actualizar</button>
                    </form>
                    
                    <!-- Formulario para el botón de Eliminar -->
                    <form action="/prestamos/delete/{{_id}}" method="POST" style="display:inline;" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este préstamo?');">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <!-- Botón para añadir un nuevo préstamo -->
    <a href="/prestamos/add" class="btn btn-primary">Añadir Préstamo</a>
</div>
