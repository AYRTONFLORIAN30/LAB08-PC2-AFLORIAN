<div class="container mt-4" style="max-width: 60%; margin: 0 auto;">
    <h2>Listado de Estados de Préstamo</h2>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>ID Préstamo</th>
                <th>Estado del Préstamo</th>
                <th>Tipo de Préstamo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each estados}}
            <tr>
                <td>{{id_prestamo}}</td>
                <td>{{estado_prestamo}}</td>
                <td>{{tipo_prestamo}}</td>
                <td>
                    <!-- Formulario para el botón de Actualizar -->
                    <form action="/estados/edit/{{_id}}" method="GET" style="display:inline;">
                        <button type="submit" class="btn btn-warning btn-sm">Actualizar</button>
                    </form>
                    
                    <!-- Formulario para el botón de Eliminar -->
                    <form action="/estados/delete/{{_id}}" method="POST" style="display:inline;" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este estado de préstamo?');">
                        <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <!-- Botón para añadir un nuevo estado de préstamo -->
    <a href="/estados/add" class="btn btn-primary">Añadir Estado</a>
</div>
